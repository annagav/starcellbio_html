{namespace scb_homepage}

/**
* Assignment selector
* @param global_template
*/
{template .main}
<div class='scb_s_homepage_view'>
    {call .display_header}
    {param global_template:$global_template /}
    {/call}
    {call scb_common.assignment_step}
    {param step:0/}
    {/call}
    {call .display_content/}
    {call .display_footer}
    {param global_template:$global_template /}
    {/call}
</div>
{/template}

